{
    "name": "detroit/core",
    "description": "A development-ready PHP implementation of clean architecture",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/mohammadhsn/detroit",
    "authors": [
        {
            "name": "Mohammad Hosseini",
            "email": "hosseini.mohamad94@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.1",
        "friendsofphp/php-cs-fixer": "^3.16"
    },
    "autoload": {
        "psr-4": {
            "Detroit\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Detroit\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint:check": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "lint:fix": "./vendor/bin/php-cs-fixer fix"
    }
}
